<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Activity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">13sp</item>

        <!--dialog-->
        <item name="md_background_color">@color/interfacesBackgroundColor</item>
        <item name="md_color_title">@color/textViewTextColor</item>
        <item name="md_color_content">@color/textViewTextColor</item>
        <item name="md_font_title">@font/comfortaa</item>
        <item name="md_font_body">@font/comfortaa_light</item>
        <item name="md_font_button">@font/comfortaa</item>
        <item name="md_corner_radius">24dp</item>
    </style>

