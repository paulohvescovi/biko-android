    <style name="FloatActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/textViewTextColor</item>
        <item name="fontFamily">@font/comfortaa_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewInverse" parent="@style/TextView">
        <item name="android:textColor">@color/textViewTextColorInverse</item>
    </style>

    <style name="TextViewBig" parent="TextView">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/comfortaa</item>
    </style>

    <style name="TextViewBigInverse" parent="TextViewInverse">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="EditTextBig" parent="EditText">
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/editTextTextColor</item>
        <item name="android:textColorHint">@color/editTexthintColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:text">@string/action</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="ButtonTransparent" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
        <item name="android:textColor">@color/textViewTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerColor</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
